<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Приложение плеер"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="38dp" />

    <TextView
        android:id="@+id/textOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Название мелодии"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="84dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="370dp"
        android:layout_height="66dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="69dp"></LinearLayout>


    <Button
        android:id="@+id/btnResume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Воспроизвести"
        app:layout_constraintBottom_toTopOf="@+id/bntPause"
        app:layout_constraintTop_toBottomOf="@+id/textOut"
        tools:layout_editor_absoluteX="122dp" />

    <Button
        android:id="@+id/bntPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:onClick="onClick"
        android:text="Пауза"
        app:layout_constraintBottom_toTopOf="@+id/btnStop"
        tools:layout_editor_absoluteX="159dp" />

    <Button
        android:id="@+id/btnStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Стоп"
        android:onClick="onClick"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="258dp" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Назад"
        android:onClick="onClick"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="311dp" />

    <Button
        android:id="@+id/btnForward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вперёд"
        android:onClick="onClick"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="364dp" />

    <Switch
        android:id="@+id/switchLoop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="436dp" />



    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Источник"
        tools:layout_editor_absoluteX="179dp"
        tools:layout_editor_absoluteY="506dp" />

    <Button
        android:id="@+id/btnStream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Интернет"
        android:onClick="onClick"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="580dp" />

    <Button
        android:id="@+id/btnRaw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Телефон"
        android:onClick="onClick"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="580dp" />

    <Button
        android:id="@+id/btnSD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SD карта"
        android:onClick="onClick"
        tools:layout_editor_absoluteX="288dp"
        tools:layout_editor_absoluteY="582dp" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="99dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="559dp"></LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>